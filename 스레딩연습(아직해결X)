# 스레드
import time
import threading

def task(n):
    for i in range(5):
        time.sleep(1)
        print(f"{n}번째 스레드 실행 {i+1}초 경과")
        
print("시작!")
threads=[]

# !타겟에 해당하는 함수에 인자가 들어가면 멀티스레딩으로 실행이 안됨;
for i in range(5):
    t=threading.Thread(name=i,target=task(i))
    threads.append(t)

for t in threads:
    t.start()

#w join은 스레드가 종료될 때 까지 기다림.
for t in threads:
    t.join()

print("끝")
